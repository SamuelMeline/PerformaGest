{% extends 'base.html.twig' %}

{% block title %}Produits
{% endblock %}

{% block body %}
	<div class="container">
		<h1>Produits</h1>

		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ produit.id }}</td>
				</tr>
				<tr>
					<th>Name</th>
					<td>{{ produit.name }}</td>
				</tr>
				<tr>
					<th>Description</th>
					<td>{{ produit.description }}</td>
				</tr>
				<tr>
					<th>Image</th>
					<td>{{ produit.image }}</td>
				</tr>
				<tr>
					<th>Price</th>
					<td>{{ produit.price }}</td>
				</tr>
				<tr>
					<th>Slug</th>
					<td>{{ produit.slug }}</td>
				</tr>
				<tr>
					<th>CreatedAt</th>
					<td>{{ produit.createdAt ? produit.createdAt|date('Y-m-d H:i:s') : '' }}</td>
				</tr>
			</tbody>
		</table>

		<a class="btn btn-secondary mb-3" href="{{ path('app_produits_index') }}">Retour a la liste</a>

		<a class="btn btn-warning mb-3" href="{{ path('app_produits_edit', {'id': produit.id}) }}">Modifier</a>

		<a class="btn btn-warning mb-3" href="{{ path('app_comments_produit', {'id': produit.id}) }}">Voir les commentaires</a>


		{{ include('produits/_delete_form.html.twig') }}
	</div>
{% endblock %}
