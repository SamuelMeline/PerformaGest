{% extends 'base.html.twig' %}

{% block title %}Patients
{% endblock %}

{% block body %}
	<div class="container">
		<h1>Patients</h1>

		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ patient.id }}</td>
				</tr>
				<tr>
					<th>Name</th>
					<td>{{ patient.name }}</td>
				</tr>
				<tr>
					<th>Description</th>
					<td>{{ patient.description }}</td>
				</tr>
				<tr>
					<th>Image</th>
					<td>{{ patient.image }}</td>
				</tr>
				<tr>
					<th>Price</th>
					<td>{{ patient.price }}</td>
				</tr>
				<tr>
					<th>Slug</th>
					<td>{{ patient.slug }}</td>
				</tr>
				<tr>
					<th>CreatedAt</th>
					<td>{{ patient.createdAt ? Patient.createdAt|date('Y-m-d H:i:s') : '' }}</td>
				</tr>
			</tbody>
		</table>

		<a class="btn btn-secondary mb-3" href="{{ path('app_Patients_index') }}">Retour a la liste</a>

		<a class="btn btn-warning mb-3" href="{{ path('app_Patients_edit', {'id': patient.id}) }}">Modifier</a>

		<a class="btn btn-warning mb-3" href="{{ path('app_comments_Patient', {'id': patient.id}) }}">Voir les commentaires</a>


		{{ include('Patients/_delete_form.html.twig') }}
	</div>
{% endblock %}
